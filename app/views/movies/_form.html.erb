<%= form_with(model: movie, local: true) do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> impediu o filme de ser salvo:</h2>

      <ul>
      <% movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br><br><br>
  <div class="form-horizontal">
    <div class="form-group row">
      <%= form.label :name, class: "col-md-2 col-form-label text-right" %>
      <div class="col-md-10">
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :description, class: "col-md-2 col-form-label text-right" %>
      <div class="col-md-10">
      <%= form.text_area :description, { class: "form-control", style: "height: 200px;" } %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :img_url, class: "col-md-2 col-form-label text-right" %>
      <div class="col-md-10">
        <%= form.text_field :img_url, class: "form-control" %>
      </div>
    </div>
  
    <div class="form-group row">
      <div class="col-md-2"></div>
      <div class="col-md-10">
        <%= form.submit "Salvar", class: "col-md-2 btn btn-primary" %>
        <%= link_to 'Voltar', movies_path, class: "col-md-2 btn btn-danger" %>
      </div>
    </div>
</div>
<% end %>
